@using StokSatisWithMVC.Models.Entity;
@model List<TBLURUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün id</th>
            <th>Ürün Adı</th>
            <th>Markası</th>
            <th>Kategori</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Kategori sil</th>
            <th>Kategori güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @item.URUNID
                </th>
                <td>
                    @item.URUNAD
                </td>
                <td>
                    @item.MARKA
                </td>
                <td>
                    @item.TBLKATEGORI.KATEGORINAME
                </td>
                <td>
                    @item.FIYAT
                </td>
                <td>
                    @item.STOK
                </td>
                <td>
                    <a href="/URUN/SIL/@item.URUNID" class="btn btn-danger">Sil</a>
                </td>
                <td>
                    <a href="/URUN/GUNCELLE/@item.URUNID" class="btn btn-success">GUNCELLE</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/URUN/YeniUrunEkle" class="btn btn-primary">Yeni Ürün Ekle</a>

<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" rel="stylesheet" />
<script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<script>
    $('#tbl1').DataTable();
</script>