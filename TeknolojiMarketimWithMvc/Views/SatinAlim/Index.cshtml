@using TeknolojiMarketimWithMvc.ViewModels;
@model IEnumerable<SatinAlimViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



<table class="table table-hover table-bordered" style="margin-top:50px">
    <thead >
        <tr>
            <td>Satın Alan</td>
            <td>Aldığı Ürün</td>
            <td>Fiyat</td>
            <td>Satış Ayıntıları</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.musteri.MUSTERIAD @i.musteri.MUSTERISOYAD</td>
                <td>@i.urun.URUNAD</td>
                <td>@i.urun.FIYAT</td>
                <td><a href="/SatinAlim/SatinAlimAyrintilar/@i.satis.SATINALIMID" class="btn btn-success">Ayrıntılar</a></td>
            </tr>
        }
    </tbody>
</table>
