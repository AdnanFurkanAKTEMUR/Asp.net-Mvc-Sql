@using TeknolojiMarketimWithMvc.ViewModels;
@model IEnumerable<SatinAlimViewModel>
@{
    ViewBag.Title = "SatinAlimAyrintilar";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



    @foreach (var item in Model)
    {
        <div class="card" style="width: 30rem;">
            <img src="@item.urun.URUNRESIM" height="250" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title">@item.urun.URUNAD</h5>
                <p class="card-text">@item.urun.URUNBILGI</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Marka: @item.urun.URUNMARKA</li>
                <li class="list-group-item">Model: @item.urun.URUNAD</li>
                <li class="list-group-item">Fiyat: @item.urun.FIYAT ₺</li>
                
            </ul>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Satın Alan: <b style="color:red">@item.musteri.MUSTERIAD @item.musteri.MUSTERISOYAD</b> </li>
                </ul>
            </div>
        </div>
    }

