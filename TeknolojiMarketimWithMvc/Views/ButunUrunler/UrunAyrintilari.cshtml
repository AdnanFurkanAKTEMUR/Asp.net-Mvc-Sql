@using TeknolojiMarketimWithMvc.Models.Entity;
@using TeknolojiMarketimWithMvc.ViewModels;
@model UrunViewModel
@{
    ViewBag.Title = "UrunAyrintilari";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@foreach (var item in Model.urun)
{
    <div class="card" style="width: 25rem;">
        <img src="@item.URUNRESIM" height="250" class="card-img-top">
        <div class="card-body">
            <h5 class="card-title">@item.URUNAD</h5>
            <p class="card-text">@item.URUNBILGI</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Marka: @item.URUNMARKA</li>
            <li class="list-group-item">Model: @item.URUNAD</li>
            <li class="list-group-item">Fiyat: @item.FIYAT ₺</li>
            <li class="list-group-item">Fiyat: @item.STOK</li>
        </ul>
        <div class="card-body">
            <a href="#" class="btn btn-success">Satın Al</a>

        </div>
    </div>
}
<br />
<h2>YORUMLAR</h2>
<br />

@foreach (var item in Model.yorumlar)
{
    <div class="card">
        <div class="card-header">
            @item.YORUMBASLIK
        </div>
        <div class="card-body">
            <h5 class="card-title">@item.YORUMYAZAN</h5>
            <p class="card-text">@item.YORUMMETIN</p>
            
        </div>
    </div>
}


