
@using TeknolojiMarketimWithMvc.ViewModels;
@model UrunViewModel
@{
    ViewBag.Title = "UrunAyrintilari";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@foreach (var item in Model.urun)
{
    <div class="card" style="width: 25rem;">
        <img src="@item.URUNRESIM" height="250" class="card-img-top">
        <div class="card-body">
            <h5 class="card-title">@item.URUNAD</h5>
            <p class="card-text">@item.URUNBILGI</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Marka: @item.URUNMARKA</li>
            <li class="list-group-item">Model: @item.URUNAD</li>
            <li class="list-group-item">Fiyat: @item.FIYAT ₺</li>
            <li class="list-group-item">Fiyat: @item.STOK</li>
        </ul>
        <div class="card-body">
            <a href="#" class="btn btn-success">Satın Al</a>

        </div>
    </div>
}
<br />



<div class="mt-20 mb-20">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yapılan Yorumlar</h4>

                </div>
                @foreach (var item in Model.yorumlar)
                {
                    <div class="comment-widgets">
                        <div class="d-flex flex-row comment-row">
                            <div class="p-2"><span class="round"><img src="https://cdn.pixabay.com/photo/2020/07/01/12/58/icon-5359554__340.png" alt="user" width="50"></span></div>
                            <div class="comment-text w-100">
                                <h5>@item.YORUMYAZAN</h5>
                                <h6>@item.YORUMBASLIK</h6>
                                <div class="comment-footer"> <span class="date"></span> <span class="action-icons"> <a href="#" data-abc="true"><i class="fa fa-pencil"></i></a> <a href="#" data-abc="true"><i class="fa fa-rotate-right"></i></a> <a href="#" data-abc="true"><i class="fa fa-heart"></i></a> </span> </div>
                                <p>@item.YORUMMETIN</p>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
<div class="card-body">
    <h4 class="card-title">Yorum Yap</h4>

</div>
<form class="form-group" method="post">
    <div>
        <label>Tam isminiz:</label>
        <input type="text" class="form-control" required name="YORUMYAZAN" />
        <label>Mailiniz</label>
        <input type="text" class="form-control" required="" name="YORUMMAIL" />
        <label>Yorum Başlığı</label>
        <input type="text" class="form-control" required="" name="YORUMBASLIK" />
        <label>Yorum</label>
        <input type="text" class="form-control" required="" name="YORUMMETIN" />
        <label>Ürün id</label>
        <input type="text" class="form-control" value="@Model.urun[0].URUNID" name="YORUNURUN" />

    </div>
    <div>
        <button style="margin-top:15px" class="btn btn-info">Kaydet</button>
    </div>
</form>
